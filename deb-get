    if [ "${UPSTREAM_ID}" == "ubuntu" ]; then
        PPA="ppa:mozillateam/ppa"
        PRETTY_NAME="Firefox ESR"
        WEBSITE="https://www.mozilla.org/firefox/enterprise/"
        SUMMARY=" Firefox Extended Support Release."
    fi
}

